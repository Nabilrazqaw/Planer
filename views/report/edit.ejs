<h2>add report</h2>

<form action="/report/edit/<%= report.id %>" method="POST">
    <div>
        <label for="sector">Sector:</label>
        <select name="sector"  required>
            <option value="">Select a sector</option>
            <option value="Beach">Beach</option>
            <option value="River">River</option>
            <option value="Lake">Lake</option>
            <option value="Urban Area">Urban Area</option>
            <option value="Forest">Forest</option>
        </select>
        <input type="text" id="sector" name="sector" value="<%= report.sector %>" required>
    </div>

    <div>
        <label for="message">Message:</label>
        <input type="text" id="message" name="message" value="<%= report.message %>" required>
    </div>

    <div>
        <label for="location">Location:</label>
        <input type="text" id="location" name="location" value="<%= report.location %>" required>
    </div>

    <div>
        <label for="report_date">Date:</label>
        <input type="datetime" id="report_date" name="report_date" value="<%= report.report_date %>" required>
    </div>
    <div>
        <label for="status">Status:</label>
        <input type="text" id="status" name="status" value="<%= report.status %>" required>
    </div>

    <div>
        <a href="/report">Kembali</a> <br>
        <button type="submit">Update</button>
    </div>
</form>

        
    
